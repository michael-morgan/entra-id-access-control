+                            <span class="badge bg-secondary">Inactive</span>
+                        }
+                    </div>
+                </div>
+            </div>
+            <div class="card-body">
+                <dl class="row">
+                    <dt class="col-sm-4">Attribute Name</dt>
+                    <dd class="col-sm-8"><code>@Model.AttributeName</code></dd>
+
+                    <dt class="col-sm-4">Display Name</dt>
+                    <dd class="col-sm-8">@Model.AttributeDisplayName</dd>
+
+                    <dt class="col-sm-4">Attribute Level</dt>
+                    <dd class="col-sm-8">
+                        <span class="badge bg-info">@Model.AttributeLevel</span>
+                    </dd>
+
+                    <dt class="col-sm-4">Workstream</dt>
+                    <dd class="col-sm-8">
+                        @if (string.IsNullOrEmpty(Model.WorkstreamId) || Model.WorkstreamId == "*")
+                        {
+                            <span class="badge bg-warning">Global</span>
+                        }
+                        else
+                        {
+                            <code>@Model.WorkstreamId</code>
+                        }
+                    </dd>
+
+                    <dt class="col-sm-4">Data Type</dt>
+                    <dd class="col-sm-8"><code>@Model.DataType</code></dd>
+
+                    <dt class="col-sm-4">Required</dt>
+                    <dd class="col-sm-8">
+                        @if (Model.IsRequired)
+                        {
+                            <span class="badge bg-danger">Yes</span>
+                        }
+                        else
+                        {
+                            <span class="badge bg-secondary">No</span>
+                        }
+                    </dd>
+
+                    @if (!string.IsNullOrWhiteSpace(Model.DefaultValue))
+                    {
+                        <dt class="col-sm-4">Default Value</dt>
+                        <dd class="col-sm-8"><code>@Model.DefaultValue</code></dd>
+                    }
+
+                    @if (!string.IsNullOrWhiteSpace(Model.Description))
+                    {
+                        <dt class="col-sm-4">Description</dt>
+                        <dd class="col-sm-8">@Model.Description</dd>
+                    }
+
+                    <dt class="col-sm-4">Display Order</dt>
+                    <dd class="col-sm-8">@Model.DisplayOrder</dd>
+                </dl>
+
+                @if (Model.CreatedAt.HasValue)
+                {
+                    <hr />
+                    <div class="row">
+                        <div class="col-sm-6">
+                            <small class="text-muted">
+                                <strong>Created:</strong> @Model.CreatedAt.Value.LocalDateTime.ToString("yyyy-MM-dd HH:mm:ss")<br />
+                                <strong>By:</strong> @(Model.CreatedBy ?? "Unknown")
+                            </small>
+                        </div>
+                        @if (Model.ModifiedAt.HasValue)
+                        {
+                            <div class="col-sm-6">
+                                <small class="text-muted">
+                                    <strong>Last Modified:</strong> @Model.ModifiedAt.Value.LocalDateTime.ToString("yyyy-MM-dd HH:mm:ss")<br />
+                                    <strong>By:</strong> @(Model.ModifiedBy ?? "Unknown")
+                                </small>
+                            </div>
+                        }
+                    </div>
+                }
+            </div>
+        </div>
+
+        <form asp-action="Delete" method="post" class="mt-3">
+            <input type="hidden" asp-for="Id" />
+            <button type="submit" class="btn btn-danger">Delete</button>
+            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
+            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">View Details</a>
+        </form>
+    </div>
+
+    <div class="col-md-4">
+        <div class="card border-danger">
+            <div class="card-header">
+                <h5>Deletion Impact</h5>
+            </div>
+            <div class="card-body">
+                <h6>Before Deleting:</h6>
+                <ul class="small">
+                    <li>This schema defines validation rules for @Model.AttributeLevel attributes</li>
+                    <li>Existing attribute values will NOT be deleted</li>
+                    <li>Future attributes will no longer be validated against this schema</li>
+                </ul>
+
+                <hr />
+
+                <h6>Impact of Deletion:</h6>
+                <ul class="small text-danger">
+                    <li><strong>Permanent:</strong> This action cannot be undone</li>
+                    <li><strong>Validation:</strong> Attribute validation rules will be lost</li>
+                    <li><strong>UI Forms:</strong> Dynamic forms may no longer display this attribute</li>
+                    <li><strong>Data:</strong> Existing attribute data remains unchanged</li>
+                </ul>
+
+                <hr />
+
+                <h6>Recommended Steps:</h6>
+                <ol class="small">
+                    <li>Review existing @Model.AttributeLevel attributes using this schema</li>
+                    <li>Consider marking as Inactive instead of deleting</li>
+                    <li>Ensure no critical validation rules will be lost</li>
+                    <li>Proceed with deletion only if schema is no longer needed</li>
+                </ol>
+            </div>
+        </div>
+    </div>
+</div>
