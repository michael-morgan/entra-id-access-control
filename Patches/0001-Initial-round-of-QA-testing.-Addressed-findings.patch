+                    _logger.LogInformation("[CONFIG DETECTION] Common pattern missing: {Attribute} for action {Action}",
+                        attr, currentAction);
+                }
+            }
+        }
+
+        _logger.LogInformation("[CONFIG DETECTION] Found {Count} missing validations for action '{Action}'",
+            diagnostics.MissingValidations.Count, currentAction);
+    }
+
+    /// <summary>
+    /// Determines the recommended rule type based on attribute schema or name patterns.
+    /// </summary>
+    private static string DetermineRecommendedRuleType(AttributeSchema schema)
+    {
+        return schema.DataType switch
+        {
+            "Number" => schema.AttributeName.Contains("Limit", StringComparison.OrdinalIgnoreCase)
+                ? "AttributeComparison"
+                : "ValueRange",
+            "String" => schema.AttributeName.Equals("Region", StringComparison.OrdinalIgnoreCase) ||
+                       schema.AttributeName.Equals("Department", StringComparison.OrdinalIgnoreCase)
+                ? "PropertyMatch"
+                : "AttributeValue",
+            "Boolean" => "AttributeValue",
+            "Date" => "AttributeComparison",
+            _ => "PropertyMatch"
+        };
+    }
+
+    /// <summary>
+    /// Determines the recommended rule type based on attribute name (when schema not available).
+    /// </summary>
+    private static string DetermineRecommendedRuleType(string attributeName)
+    {
+        if (attributeName.Contains("Limit", StringComparison.OrdinalIgnoreCase))
+            return "AttributeComparison";
+        if (attributeName.Equals("Region", StringComparison.OrdinalIgnoreCase) ||
+            attributeName.Equals("Department", StringComparison.OrdinalIgnoreCase))
+            return "PropertyMatch";
+        if (attributeName.Contains("Level", StringComparison.OrdinalIgnoreCase))
+            return "ValueRange";
+        return "PropertyMatch";
+    }
