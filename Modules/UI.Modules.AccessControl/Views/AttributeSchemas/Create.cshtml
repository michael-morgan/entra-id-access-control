@model UI.Modules.AccessControl.Models.AttributeSchemaViewModel

@{
    ViewData["Title"] = "Create Attribute Schema";
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <p class="lead">Define a new attribute schema for groups, users, roles, or resources.</p>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <div class="alert alert-info">
            <strong>Workstream:</strong> @ViewBag.SelectedWorkstream
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card">
                <div class="card-header">
                    <h4>Schema Information</h4>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="AttributeLevel" class="control-label"></label>
                        <select asp-for="AttributeLevel" class="form-control">
                            <option value="">-- Select Level --</option>
                            <option value="Group">Group</option>
                            <option value="User">User</option>
                            <option value="Role">Role</option>
                            <option value="Resource">Resource</option>
                        </select>
                        <span asp-validation-for="AttributeLevel" class="text-danger"></span>
                        <small class="form-text text-muted">Group/User/Role: database attributes | Resource: entity properties passed</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AttributeName" class="control-label"></label>
                        <input asp-for="AttributeName" class="form-control" placeholder="e.g., Department, ApprovalLimit, Region" />
                        <span asp-validation-for="AttributeName" class="text-danger"></span>
                        <small class="form-text text-muted">The JSON property name (PascalCase recommended)</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AttributeDisplayName" class="control-label"></label>
                        <input asp-for="AttributeDisplayName" class="form-control" placeholder="e.g., Department Name, Maximum Approval Limit" />
                        <span asp-validation-for="AttributeDisplayName" class="text-danger"></span>
                        <small class="form-text text-muted">The friendly name displayed in the UI</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DataType" class="control-label"></label>
                        <select asp-for="DataType" class="form-control">
                            <option value="">-- Select Data Type --</option>
                            <option value="String">String</option>
                            <option value="Number">Number</option>
                            <option value="Boolean">Boolean</option>
                            <option value="Date">Date</option>
                            <option value="Array">Array</option>
                            <option value="Object">Object</option>
                        </select>
                        <span asp-validation-for="DataType" class="text-danger"></span>
                        <small class="form-text text-muted">The data type for validation and rendering</small>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsRequired" class="form-check-input" type="checkbox" />
                        <label asp-for="IsRequired" class="form-check-label"></label>
                        <span asp-validation-for="IsRequired" class="text-danger"></span>
                        <small class="form-text text-muted d-block">Check if this attribute must be provided</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DefaultValue" class="control-label"></label>
                        <input asp-for="DefaultValue" class="form-control" placeholder="Optional default value" />
                        <span asp-validation-for="DefaultValue" class="text-danger"></span>
                        <small class="form-text text-muted">Default value for new entries (optional)</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AllowedValuesInput" class="control-label"></label>
                        <input asp-for="AllowedValuesInput" class="form-control" placeholder="e.g., Finance, IT, HR, Operations" />
                        <span asp-validation-for="AllowedValuesInput" class="text-danger"></span>
                        <small class="form-text text-muted">Comma-separated list of allowed values (optional, for enumerated types)</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Help text describing this attribute"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="form-text text-muted">Optional description or help text</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DisplayOrder" class="control-label"></label>
                        <input asp-for="DisplayOrder" class="form-control" type="number" value="0" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        <small class="form-text text-muted">Display order in forms (lower numbers appear first)</small>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsActive" class="form-check-label"></label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
