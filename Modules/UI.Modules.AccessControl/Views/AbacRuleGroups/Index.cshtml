@model IEnumerable<UI.Modules.AccessControl.Models.AbacRuleGroupViewModel>

@{
    ViewData["Title"] = "ABAC Rule Groups";
}

<h1>ABAC Rule Groups</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Rule Group</a>
</p>

<form asp-action="Index" method="get" class="row g-3 mb-3">
    <div class="col-md-9">
        <label for="search" class="form-label">Search</label>
        <input type="text" name="search" id="search" class="form-control" value="@ViewBag.Search" placeholder="Search by group name or description..." />
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-secondary me-2">Search</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Priority</th>
            <th>Group Name</th>
            <th>Parent Group</th>
            <th>Operator</th>
            <th>Resource</th>
            <th>Action</th>
            <th>Rules</th>
            <th>Child Groups</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Priority)</td>
            <td><strong>@Html.DisplayFor(modelItem => item.GroupName)</strong></td>
            <td>
                @if (!string.IsNullOrEmpty(item.ParentGroupName))
                {
                    <span class="badge bg-secondary">@item.ParentGroupName</span>
                }
                else
                {
                    <span class="text-muted">Top Level</span>
                }
            </td>
            <td>
                @if (item.LogicalOperator == "AND")
                {
                    <span class="badge bg-info">AND</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">OR</span>
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Resource))
                {
                    <code>@item.Resource</code>
                }
                else
                {
                    <span class="text-muted">Any</span>
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Action))
                {
                    <code>@item.Action</code>
                }
                else
                {
                    <span class="text-muted">Any</span>
                }
            </td>
            <td>
                @if (item.RuleCount > 0)
                {
                    <span class="badge bg-success">@item.RuleCount</span>
                }
                else
                {
                    <span class="text-muted">0</span>
                }
            </td>
            <td>
                @if (item.ChildGroupCount > 0)
                {
                    <span class="badge bg-primary">@item.ChildGroupCount</span>
                }
                else
                {
                    <span class="text-muted">0</span>
                }
            </td>
            <td>
                @if (item.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Details">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No rule groups found. <a asp-action="Create">Create a rule group</a> to organize your ABAC rules.
    </div>
}
