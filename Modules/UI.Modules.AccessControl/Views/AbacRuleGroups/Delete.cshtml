@model Api.Modules.AccessControl.Persistence.Entities.Authorization.AbacRuleGroup

@{
    ViewData["Title"] = "Delete Rule Group";
}

<h1>Delete Rule Group</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this rule group?</h4>
    <p>This action cannot be undone.</p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Group Name</dt>
        <dd class="col-sm-9">
            <strong>@Html.DisplayFor(model => model.GroupName)</strong>
        </dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                @Html.DisplayFor(model => model.Description)
            }
            else
            {
                <span class="text-muted">No description</span>
            }
        </dd>

        <dt class="col-sm-3">Workstream</dt>
        <dd class="col-sm-9">
            <span class="badge bg-primary">@Html.DisplayFor(model => model.WorkstreamId)</span>
        </dd>

        <dt class="col-sm-3">Parent Group</dt>
        <dd class="col-sm-9">
            @if (Model.ParentGroup != null)
            {
                <span class="badge bg-secondary">@Model.ParentGroup.GroupName</span>
            }
            else
            {
                <span class="text-muted">Top Level Group</span>
            }
        </dd>

        <dt class="col-sm-3">Child Groups</dt>
        <dd class="col-sm-9">
            <span class="badge bg-primary">@Model.ChildGroups.Count</span>
            @if (Model.ChildGroups.Any())
            {
                <div class="alert alert-warning mt-2">
                    <strong>Warning:</strong> This group has @Model.ChildGroups.Count child group(s). You must delete or reassign them first.
                </div>
            }
        </dd>

        <dt class="col-sm-3">Direct Rules</dt>
        <dd class="col-sm-9">
            <span class="badge bg-success">@Model.Rules.Count</span>
            @if (Model.Rules.Any())
            {
                <div class="alert alert-warning mt-2">
                    <strong>Warning:</strong> This group has @Model.Rules.Count rule(s). You must delete or reassign them first.
                </div>
            }
        </dd>

        <dt class="col-sm-3">Logical Operator</dt>
        <dd class="col-sm-9">
            @if (Model.LogicalOperator == "AND")
            {
                <span class="badge bg-info">AND</span>
            }
            else
            {
                <span class="badge bg-warning text-dark">OR</span>
            }
        </dd>

        <dt class="col-sm-3">Resource</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Resource))
            {
                <code>@Html.DisplayFor(model => model.Resource)</code>
            }
            else
            {
                <span class="text-muted">Any resource</span>
            }
        </dd>

        <dt class="col-sm-3">Action</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Action))
            {
                <code>@Html.DisplayFor(model => model.Action)</code>
            }
            else
            {
                <span class="text-muted">Any action</span>
            }
        </dd>

        <dt class="col-sm-3">Priority</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Priority)
        </dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (Model.ChildGroups.Any() || Model.Rules.Any())
        {
            <div class="alert alert-danger">
                <strong>Cannot delete this group!</strong>
                This group has child groups or rules. Please remove them first before deleting this group.
            </div>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        }
        else
        {
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        }
    </form>
</div>
