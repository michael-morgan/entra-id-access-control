@model IEnumerable<Api.Modules.AccessControl.Persistence.Entities.Authorization.CasbinPolicy>

@{
    ViewData["Title"] = "Policies";
}

<h1>Casbin Policies</h1>

<div class="alert alert-info">
    <div class="row align-items-center">
        <div class="col-md-8">
            <p class="mb-2"><strong>Two-Layer Authorization:</strong></p>
            <p class="mb-0">
                <span class="badge bg-success me-2">Layer 1 (Controller)</span> RBAC policies are evaluated first for fast authorization checks.<br/>
                <span class="badge bg-warning text-dark me-2">Layer 2 (Service)</span> RBAC + ABAC policies with business rules are evaluated in the service layer.
            </p>
        </div>
        <div class="col-md-4 text-end">
            <p class="mb-0 small text-muted">All policies below support Layer 1 (RBAC). Layer 2 adds ABAC evaluators for complex business rules.</p>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Policy</a>
</p>

<form asp-action="Index" method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <label for="policyType" class="form-label">Policy Type</label>
        <select name="policyType" id="policyType" class="form-select">
            <option value="">All Types</option>
            @foreach (var type in ViewBag.PolicyTypes)
            {
                <option value="@type" selected="@(type == ViewBag.PolicyType)">@type</option>
            }
        </select>
    </div>
    <div class="col-md-6">
        <label for="search" class="form-label">Search</label>
        <input type="text" name="search" id="search" class="form-control" value="@ViewBag.Search" placeholder="Search in V0, V1, V2..." />
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-secondary me-2">Filter</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Type</th>
            <th>Subject<br/><small class="text-muted">(Group/User/Role)</small></th>
            <th>Role/Workstream<br/><small class="text-muted">(g=Role, p=Workstream)</small></th>
            <th>Workstream/Resource<br/><small class="text-muted">(g=Workstream, p=Resource)</small></th>
            <th>Action/Effect<br/><small class="text-muted">(p only)</small></th>
            <th>Effect<br/><small class="text-muted">(p only)</small></th>
            <th>V5</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@{
    var displayNames = ViewBag.DisplayNames as Dictionary<string, string> ?? new Dictionary<string, string>();
}
@foreach (var item in Model) {
        <tr>
            <td><span class="badge bg-info">@Html.DisplayFor(modelItem => item.PolicyType)</span></td>
            <td>
                @if (item.PolicyType == "g")
                {
                    <small class="text-muted">Group/Role:</small><br/>
                    @if (displayNames.ContainsKey(item.V0))
                    {
                        <div>
                            <strong>@displayNames[item.V0]</strong>
                            <br />
                            <code class="small text-muted">@item.V0</code>
                        </div>
                    }
                    else
                    {
                        <code class="small">@item.V0</code>
                    }
                }
                else
                {
                    <small class="text-muted">Role:</small><br/>
                    <code class="small">@item.V0</code>
                }
            </td>
            <td>
                @if (item.PolicyType == "g")
                {
                    <small class="text-muted">Assigned Role:</small><br/>
                    <strong>@Html.DisplayFor(modelItem => item.V1)</strong>
                }
                else
                {
                    <small class="text-muted">Workstream:</small><br/>
                    <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.V1)</span>
                }
            </td>
            <td>
                @if (item.PolicyType == "g")
                {
                    <small class="text-muted">Workstream:</small><br/>
                    <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.V2)</span>
                }
                else
                {
                    <small class="text-muted">Resource:</small><br/>
                    <code>@Html.DisplayFor(modelItem => item.V2)</code>
                }
            </td>
            <td>
                @if (item.PolicyType == "p" && !string.IsNullOrEmpty(item.V3))
                {
                    <small class="text-muted">Action:</small><br/>
                    <code>@Html.DisplayFor(modelItem => item.V3)</code>
                }
            </td>
            <td>
                @if (item.PolicyType == "p" && !string.IsNullOrEmpty(item.V4))
                {
                    <small class="text-muted">Effect:</small><br/>
                    @if (item.V4 == "allow")
                    {
                        <span class="badge bg-success">allow</span>
                    }
                    else if (item.V4 == "deny")
                    {
                        <span class="badge bg-danger">deny</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.V4)
                    }
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.V5)</td>
            <td>
                @if (item.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Details">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No policies found. <a asp-action="Create">Create your first policy</a>.
    </div>
}
