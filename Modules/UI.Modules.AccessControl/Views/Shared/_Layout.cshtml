<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI.Modules.AccessControl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UI.Modules.AccessControl.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Access Control Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="policiesDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Policies
                            </a>
                            <div class="dropdown-menu" aria-labelledby="policiesDropdown">
                                <a class="dropdown-item" asp-controller="Policies" asp-action="Index">All Policies</a>
                                <a class="dropdown-item" asp-controller="Policies" asp-action="Create">Create New</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Policies" asp-action="Index" asp-route-policyType="p">Permission Policies (p)</a>
                                <a class="dropdown-item" asp-controller="Policies" asp-action="Index" asp-route-policyType="g">Role Assignments (g)</a>
                                <a class="dropdown-item" asp-controller="Policies" asp-action="Index" asp-route-policyType="g2">Domain Roles (g2)</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="resourcesDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Resources
                            </a>
                            <div class="dropdown-menu" aria-labelledby="resourcesDropdown">
                                <a class="dropdown-item" asp-controller="Resources" asp-action="Index">All Resources</a>
                                <a class="dropdown-item" asp-controller="Resources" asp-action="Create">Create New</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="rolesDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Roles
                            </a>
                            <div class="dropdown-menu" aria-labelledby="rolesDropdown">
                                <a class="dropdown-item" asp-controller="Roles" asp-action="Index">All Roles</a>
                                <a class="dropdown-item" asp-controller="Roles" asp-action="Create">Create New</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="abacAttributesDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                ABAC Attributes
                            </a>
                            <div class="dropdown-menu" aria-labelledby="abacAttributesDropdown">
                                <h6 class="dropdown-header">Attribute Schemas</h6>
                                <a class="dropdown-item" asp-controller="AttributeSchemas" asp-action="Index">All Attribute Schemas</a>
                                <a class="dropdown-item" asp-controller="AttributeSchemas" asp-action="Create">Create New Schema</a>
                                <div class="dropdown-divider"></div>
                                <h6 class="dropdown-header">User Attributes</h6>
                                <a class="dropdown-item" asp-controller="UserAttributes" asp-action="Index">All User Attributes</a>
                                <a class="dropdown-item" asp-controller="UserAttributes" asp-action="Create">Create New</a>
                                <div class="dropdown-divider"></div>
                                <h6 class="dropdown-header">Group Attributes</h6>
                                <a class="dropdown-item" asp-controller="GroupAttributes" asp-action="Index">All Group Attributes</a>
                                <a class="dropdown-item" asp-controller="GroupAttributes" asp-action="Create">Create New</a>
                                <div class="dropdown-divider"></div>
                                <h6 class="dropdown-header">Role Attributes</h6>
                                <a class="dropdown-item" asp-controller="RoleAttributes" asp-action="Index">All Role Attributes</a>
                                <a class="dropdown-item" asp-controller="RoleAttributes" asp-action="Create">Create New</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="abacRulesDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                ABAC Rules
                            </a>
                            <div class="dropdown-menu" aria-labelledby="abacRulesDropdown">
                                <h6 class="dropdown-header">Individual Rules</h6>
                                <a class="dropdown-item" asp-controller="AbacRules" asp-action="Index">All ABAC Rules</a>
                                <a class="dropdown-item" asp-controller="AbacRules" asp-action="Create">Create New Rule</a>
                                <div class="dropdown-divider"></div>
                                <h6 class="dropdown-header">Rule Groups</h6>
                                <a class="dropdown-item" asp-controller="AbacRuleGroups" asp-action="Index">All Rule Groups</a>
                                <a class="dropdown-item" asp-controller="AbacRuleGroups" asp-action="Create">Create New Group</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="eventsDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Events & Audit
                            </a>
                            <div class="dropdown-menu" aria-labelledby="eventsDropdown">
                                <a class="dropdown-item" asp-controller="Events" asp-action="Index">Business Events</a>
                                <a class="dropdown-item" asp-controller="Events" asp-action="Audit">Technical Audit Logs</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Test" asp-action="Index">Testing</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="workstreamDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <strong>Workstream:</strong> <span id="currentWorkstream">@(Context.Session.GetString("SelectedWorkstream") ?? "platform")</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="workstreamDropdown">
                                <h6 class="dropdown-header">Select Workstream</h6>
                                <a class="dropdown-item workstream-option" href="#" data-workstream="platform">Platform</a>
                                <a class="dropdown-item workstream-option" href="#" data-workstream="loans">Loans</a>
                                <a class="dropdown-item workstream-option" href="#" data-workstream="claims">Claims</a>
                                <a class="dropdown-item workstream-option" href="#" data-workstream="documents">Documents</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - UI.Modules.AccessControl - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Handle workstream selection
        document.addEventListener('DOMContentLoaded', function() {
            const workstreamOptions = document.querySelectorAll('.workstream-option');
            workstreamOptions.forEach(option => {
                option.addEventListener('click', function(e) {
                    e.preventDefault();
                    const workstreamId = this.getAttribute('data-workstream');
                    const currentUrl = window.location.href;

                    // Create form and submit to SetWorkstream endpoint
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/Workstream/SetWorkstream';

                    const workstreamInput = document.createElement('input');
                    workstreamInput.type = 'hidden';
                    workstreamInput.name = 'workstreamId';
                    workstreamInput.value = workstreamId;
                    form.appendChild(workstreamInput);

                    const returnUrlInput = document.createElement('input');
                    returnUrlInput.type = 'hidden';
                    returnUrlInput.name = 'returnUrl';
                    returnUrlInput.value = currentUrl;
                    form.appendChild(returnUrlInput);

                    document.body.appendChild(form);
                    form.submit();
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
