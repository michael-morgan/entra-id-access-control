@model Api.Modules.AccessControl.Persistence.Entities.Authorization.CasbinResource

@{
    ViewData["Title"] = "Delete Resource";
}

<h2>Delete Resource</h2>

<h3>Are you sure you want to delete this resource?</h3>
<div class="alert alert-warning">
    <strong>Warning:</strong> This will permanently remove the resource definition from the system.
    Any policies referencing this resource may be affected.
</div>

<div>
    <h4>Resource Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Workstream
        </dt>
        <dd class="col-sm-10">
            @if (Model.WorkstreamId == "*")
            {
                <span class="badge bg-secondary">Global (*)</span>
            }
            else
            {
                <span class="badge bg-primary">@Model.WorkstreamId</span>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResourcePattern)
        </dt>
        <dd class="col-sm-10">
            <code>@Html.DisplayFor(model => model.ResourcePattern)</code>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisplayName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisplayName)
        </dd>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        }

        @if (!string.IsNullOrWhiteSpace(Model.ParentResource))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParentResource)
            </dt>
            <dd class="col-sm-10">
                <code>@Html.DisplayFor(model => model.ParentResource)</code>
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
