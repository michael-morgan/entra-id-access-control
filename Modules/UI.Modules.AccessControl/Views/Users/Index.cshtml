@model IEnumerable<Microsoft.Graph.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p class="text-muted">
    View and manage users from Entra ID. User information is read-only from Entra ID, but you can manage their local attributes and role assignments.
</p>

<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search by name..." value="@ViewBag.SearchTerm" />
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Search
                </button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Clear</a>
                }
            </div>
        </div>
    </div>
</form>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Display Name</th>
                <th>Job Title</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <p>No users found matching "@ViewBag.SearchTerm".</p>
                        }
                        else
                        {
                            <p>No users found.</p>
                        }
                    </td>
                </tr>
            }
            else
            {
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <strong>@user.DisplayName</strong>
                        </td>
                        <td>@user.JobTitle</td>
                        <td>@user.Department</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-sm btn-secondary">
                                <i class="bi bi-shield-lock"></i> Roles
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (Model.Any())
{
    <p class="text-muted mt-3">
        <i class="bi bi-info-circle"></i> Showing @Model.Count() user(s).
    </p>
}

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
