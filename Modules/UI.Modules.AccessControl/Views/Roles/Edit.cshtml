@model UI.Modules.AccessControl.Models.RoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="WorkstreamId" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="CreatedBy" />

            <div class="mb-3">
                <label asp-for="RoleName" class="form-label"></label>
                <input asp-for="RoleName" class="form-control" placeholder="e.g., loan_approver, claims_adjuster" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
                <div class="form-text">Unique identifier for this role (typically lowercase with underscores)</div>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayName" class="form-label"></label>
                <input asp-for="DisplayName" class="form-control" placeholder="e.g., Loan Approver, Claims Adjuster" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
                <div class="form-text">Human-readable name for display in the UI</div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="e.g., Role for approving loan applications up to a certain amount"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <div class="form-text">Optional description of the role's purpose and responsibilities</div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsSystemRole" class="form-check-input" />
                            <label asp-for="IsSystemRole" class="form-check-label"></label>
                        </div>
                        <div class="form-text">System roles cannot be deleted</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                        <div class="form-text">Inactive roles are not used in authorization</div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <strong>Workstream:</strong> <code>@Model.WorkstreamId</code>
            </div>

            @if (Model.CreatedAt.HasValue)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <strong>Created:</strong> @Model.CreatedAt.Value.LocalDateTime.ToString("yyyy-MM-dd HH:mm:ss")<br />
                                    <strong>By:</strong> @(Model.CreatedBy ?? "Unknown")
                                </small>
                            </div>
                            @if (Model.ModifiedAt.HasValue)
                            {
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <strong>Last Modified:</strong> @Model.ModifiedAt.Value.LocalDateTime.ToString("yyyy-MM-dd HH:mm:ss")<br />
                                        <strong>By:</strong> @(Model.ModifiedBy ?? "Unknown")
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">View Details</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Role Naming Guide</h5>
            </div>
            <div class="card-body">
                <h6>Role Name:</h6>
                <ul class="small">
                    <li>Use lowercase with underscores</li>
                    <li>Keep it concise and descriptive</li>
                    <li>Examples: <code>loan_approver</code>, <code>claims_manager</code></li>
                </ul>

                <h6 class="mt-3">Display Name:</h6>
                <ul class="small">
                    <li>Use proper capitalization</li>
                    <li>More human-readable</li>
                    <li>Examples: "Loan Approver", "Claims Manager"</li>
                </ul>

                <h6 class="mt-3">System Roles:</h6>
                <ul class="small">
                    <li>Mark as system role if it's foundational</li>
                    <li>System roles cannot be deleted</li>
                    <li>Use for built-in roles like "admin", "user"</li>
                </ul>

                <h6 class="mt-3">Impact of Changes:</h6>
                <p class="small text-warning">
                    <strong>Warning:</strong> Changing the role name will affect all policies that reference this role. Ensure you update related policies accordingly.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
