@model UI.Modules.AccessControl.Models.RoleViewModel

@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>

<div class="alert alert-danger">
    <h4 class="alert-heading">Are you sure you want to delete this role?</h4>
    <p>This action cannot be undone. Please confirm that you want to permanently delete this role.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">@Model.DisplayName</h4>
                    <div>
                        @if (Model.IsSystemRole)
                        {
                            <span class="badge bg-info">System Role</span>
                        }
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Role Name</dt>
                    <dd class="col-sm-9"><code>@Model.RoleName</code></dd>

                    <dt class="col-sm-3">Display Name</dt>
                    <dd class="col-sm-9">@Model.DisplayName</dd>

                    <dt class="col-sm-3">Workstream</dt>
                    <dd class="col-sm-9">
                        @if (Model.WorkstreamId == "*")
                        {
                            <span class="badge bg-warning">Global</span>
                        }
                        else
                        {
                            <code>@Model.WorkstreamId</code>
                        }
                    </dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrWhiteSpace(Model.Description))
                        {
                            @Model.Description
                        }
                        else
                        {
                            <em class="text-muted">No description provided</em>
                        }
                    </dd>

                    <dt class="col-sm-3">System Role</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsSystemRole)
                        {
                            <span class="badge bg-info">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                </dl>

                @if (Model.CreatedAt.HasValue)
                {
                    <hr />
                    <div class="row">
                        <div class="col-sm-6">
                            <small class="text-muted">
                                <strong>Created:</strong> @Model.CreatedAt.Value.LocalDateTime.ToString("yyyy-MM-dd HH:mm:ss")<br />
                                <strong>By:</strong> @(Model.CreatedBy ?? "Unknown")
                            </small>
                        </div>
                        @if (Model.ModifiedAt.HasValue)
                        {
                            <div class="col-sm-6">
                                <small class="text-muted">
                                    <strong>Last Modified:</strong> @Model.ModifiedAt.Value.LocalDateTime.ToString("yyyy-MM-dd HH:mm:ss")<br />
                                    <strong>By:</strong> @(Model.ModifiedBy ?? "Unknown")
                                </small>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            @if (Model.IsSystemRole)
            {
                <div class="alert alert-warning">
                    <strong>System Role:</strong> This is a system role and cannot be deleted.
                </div>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            }
            else
            {
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">View Details</a>
            }
        </form>
    </div>

    <div class="col-md-4">
        <div class="card border-danger">
            <div class="card-header">
                <h5>Deletion Requirements</h5>
            </div>
            <div class="card-body">
                <h6>Before Deleting:</h6>
                <ul class="small">
                    <li>System roles cannot be deleted</li>
                    <li>The role must not be referenced in any policies</li>
                    <li>Check both 'p' policies (V0) and 'g' policies (V0, V1)</li>
                </ul>

                <hr />

                <h6>Impact of Deletion:</h6>
                <ul class="small text-danger">
                    <li><strong>Permanent:</strong> This action cannot be undone</li>
                    <li><strong>Authorization:</strong> Any users assigned this role will lose associated permissions</li>
                    <li><strong>Policies:</strong> All policy references must be removed first</li>
                </ul>

                <hr />

                <h6>Recommended Steps:</h6>
                <ol class="small">
                    <li>Check for policy references using the "View Related Policies" link</li>
                    <li>Remove or update all referencing policies</li>
                    <li>Verify no users are currently assigned this role</li>
                    <li>Proceed with deletion</li>
                </ol>

                <div class="mt-3">
                    <a asp-controller="Policies" asp-action="Index" asp-route-search="@Model.RoleName" class="btn btn-sm btn-primary w-100">
                        View Related Policies
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
