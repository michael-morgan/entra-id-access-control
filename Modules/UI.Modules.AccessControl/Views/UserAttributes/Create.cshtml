@model UI.Modules.AccessControl.Models.UserAttributeViewModel

@{
    ViewData["Title"] = "Create User Attributes";
}

<h1>Create User Attributes</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="UserId" class="form-label"></label>
                <input asp-for="UserId" class="form-control" placeholder="e.g., 12345678-1234-1234-1234-123456789abc" />
                <span asp-validation-for="UserId" class="text-danger"></span>
                <div class="form-text">The Entra ID Object ID (OID) from the user's JWT token</div>
            </div>

            <div class="mb-3">
                <label asp-for="WorkstreamId" class="form-label"></label>
                <input asp-for="WorkstreamId" class="form-control" placeholder="e.g., Loans, Claims, Payments" />
                <span asp-validation-for="WorkstreamId" class="text-danger"></span>
                <div class="form-text">Optional workstream identifier for multi-tenant scenarios</div>
            </div>

            <div class="mb-3">
                <label class="form-label">User Attributes</label>
                <div id="attributeFormContainer"></div>
                <input asp-for="AttributesJson" type="hidden" />
                <span asp-validation-for="AttributesJson" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>JSON Attributes Example</h5>
            </div>
            <div class="card-body">
                <h6>Sample JSON:</h6>
                <pre class="small bg-light p-2"><code>{
  "Department": "Finance",
  "Region": "North",
  "ManagementLevel": 2,
  "ApprovalLimit": 50000,
  "CostCenter": "CC-12345"
}</code></pre>

                <h6 class="mt-3">Example ABAC Rules:</h6>
                <ul class="small">
                    <li>User can approve loans if amount &lt;= approvalLimit</li>
                    <li>User can only access data in their region</li>
                    <li>Confidential docs require managementLevel &gt;= 2</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/attribute-form-builder.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const workstreamId = '@ViewBag.SelectedWorkstream';
            const formBuilder = new AttributeFormBuilder(
                workstreamId,
                'User',
                '#attributeFormContainer',
                '#AttributesJson'
            );
            formBuilder.init();
        });
    </script>
}
