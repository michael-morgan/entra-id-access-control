@model IEnumerable<Api.Modules.AccessControl.Persistence.Entities.Authorization.UserAttribute>

@{
    ViewData["Title"] = "User Attributes";
}

<h1>User Attributes (ABAC)</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New User Attributes</a>
</p>

<form asp-action="Index" method="get" class="row g-3 mb-3">
    <div class="col-md-9">
        <label for="search" class="form-label">Search</label>
        <input type="text" name="search" id="search" class="form-control" value="@ViewBag.Search" placeholder="Search by User ID or Workstream..." />
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-secondary me-2">Search</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Workstream ID</th>
            <th>Status</th>
            <th>Attributes Preview</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@{
    var userDisplayNames = ViewBag.UserDisplayNames as Dictionary<string, string> ?? new Dictionary<string, string>();
}
@foreach (var item in Model) {
        <tr>
            <td>
                @{
                    var displayName = item.UserName;
                    if (string.IsNullOrEmpty(displayName) && userDisplayNames.ContainsKey(item.UserId))
                    {
                        displayName = userDisplayNames[item.UserId];
                    }
                }
                @if (!string.IsNullOrEmpty(displayName))
                {
                    <div>@displayName</div>
                    <small class="text-muted"><code>@item.UserId</code></small>
                }
                else
                {
                    <code>@item.UserId</code>
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.WorkstreamId))
                {
                    <span class="badge bg-primary">@item.WorkstreamId</span>
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </td>
            <td>
                @if (item.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.AttributesJson))
                {
                    var preview = item.AttributesJson.Length > 100 ? item.AttributesJson.Substring(0, 100) + "..." : item.AttributesJson;
                    <code class="small">@preview</code>
                }
                else
                {
                    <span class="text-muted">No attributes</span>
                }
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Details">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No user attributes found. <a asp-action="Create">Create user attributes</a> to enable ABAC rules.
    </div>
}
