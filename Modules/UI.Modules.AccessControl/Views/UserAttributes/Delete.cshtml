@model Api.Modules.AccessControl.Persistence.Entities.Authorization.UserAttribute

@{
    ViewData["Title"] = "Delete User Attributes";
}

<h2>Delete User Attributes</h2>

<h3>Are you sure you want to delete these user attributes?</h3>
<div class="alert alert-warning">
    <strong>Warning:</strong> This will permanently remove the user attributes. The user will no longer have ABAC attributes for authorization decisions.
</div>

<div>
    <h4>User Attributes for @ViewBag.UserDisplayName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            User
        </dt>
        <dd class="col-sm-9">
            @ViewBag.UserDisplayName
            @if (ViewBag.UserDisplayName != Model.UserId)
            {
                <br /><small class="text-muted">User ID: <code>@Model.UserId</code></small>
            }
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.WorkstreamId)
        </dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.WorkstreamId))
            {
                <span class="badge bg-primary">@Model.WorkstreamId</span>
            }
            else
            {
                <span class="text-muted">Not Set</span>
            }
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AttributesJson)
        </dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.AttributesJson))
            {
                <pre class="bg-light p-3 rounded"><code>@Model.AttributesJson</code></pre>
            }
            else
            {
                <span class="text-muted">No Attributes</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
