@model UI.Modules.AccessControl.Models.UserAttributeViewModel

@{
    ViewData["Title"] = "User Attribute Details";
}

<h2>User Attribute Details</h2>

<div>
    <h4>User Attributes for @(Model.UserName ?? ViewBag.UserDisplayName ?? Model.UserId)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">User</dt>
        <dd class="col-sm-9">
            <strong>@(Model.UserName ?? ViewBag.UserDisplayName ?? Model.UserId)</strong>
            <br />
            <code class="small text-muted">@Model.UserId</code>
        </dd>

        <dt class="col-sm-3">Workstream ID</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.WorkstreamId))
            {
                <span class="badge bg-primary">@Model.WorkstreamId</span>
            }
            else
            {
                <span class="text-muted">Not Set</span>
            }
        </dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </dd>

        <dt class="col-sm-3">Attributes JSON</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.AttributesJson))
            {
                <pre class="bg-light p-3 rounded"><code>@Model.AttributesJson</code></pre>
            }
            else
            {
                <span class="text-muted">No Attributes</span>
            }
        </dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">
            @if (Model.CreatedAt.HasValue)
            {
                @Model.CreatedAt.Value.LocalDateTime.ToString("yyyy-MM-dd HH:mm:ss")
            }
            else
            {
                <span class="text-muted">Not available</span>
            }
        </dd>

        <dt class="col-sm-3">Modified At</dt>
        <dd class="col-sm-9">
            @if (Model.ModifiedAt.HasValue)
            {
                @Model.ModifiedAt.Value.LocalDateTime.ToString("yyyy-MM-dd HH:mm:ss")
            }
            else
            {
                <span class="text-muted">Not modified</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
