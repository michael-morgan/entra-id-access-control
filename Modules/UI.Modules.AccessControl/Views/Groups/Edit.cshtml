@model UI.Modules.AccessControl.Models.GroupEditViewModel

@{
    ViewData["Title"] = $"Edit Group: {Model.DisplayName}";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Groups</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.GroupId">@Model.DisplayName</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<h1>Edit Group</h1>

<p class="text-muted">
    Enrich group information with a friendly display name and description. This information is used for display purposes only.
    Authorization decisions always use the JWT groups claim as the source of truth.
</p>

@if (Model.IsAutoDiscovered)
{
    <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle"></i>
        This group was auto-discovered from JWT tokens. You can add a friendly name and description to make it easier to identify.
    </div>
}

<form method="post" asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="GroupId" />
    <input type="hidden" asp-for="Source" />

    <div class="card mb-3">
        <div class="card-header">
            <h5 class="mb-0">Group Information</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Group ID (Read-only)</label>
                <input type="text" class="form-control" value="@Model.GroupId" disabled />
                <small class="form-text text-muted">This is the Entra ID Object ID and cannot be changed.</small>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayName" class="form-label"></label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
                <small class="form-text text-muted">Friendly name for display in the admin UI.</small>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <small class="form-text text-muted">Optional description explaining the purpose of this group.</small>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Details" asp-route-id="@Model.GroupId" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Save Changes
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
