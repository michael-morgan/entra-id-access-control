@model UI.Modules.AccessControl.Models.RoleAttributeViewModel

@{
    ViewData["Title"] = "Create Role Attributes";
}

<h1>Create Role Attributes</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="AppRoleId" class="form-label"></label>
                <input asp-for="AppRoleId" class="form-control" placeholder="e.g., abcd1234-5678-90ab-cdef-1234567890ab" />
                <span asp-validation-for="AppRoleId" class="text-danger"></span>
                <div class="form-text">The Entra ID App Role ID (from app registration)</div>
            </div>

            <div class="mb-3">
                <label asp-for="RoleValue" class="form-label"></label>
                <input asp-for="RoleValue" class="form-control" placeholder="e.g., LoanManager, ClaimsProcessor" />
                <span asp-validation-for="RoleValue" class="text-danger"></span>
                <div class="form-text">The role value from JWT token's 'roles' claim</div>
            </div>

            <div class="mb-3">
                <label asp-for="RoleDisplayName" class="form-label"></label>
                <input asp-for="RoleDisplayName" class="form-control" placeholder="e.g., Loan Manager, Claims Processor" />
                <span asp-validation-for="RoleDisplayName" class="text-danger"></span>
                <div class="form-text">Human-readable display name</div>
            </div>

            <div class="mb-3">
                <label asp-for="WorkstreamId" class="form-label"></label>
                <input asp-for="WorkstreamId" class="form-control" placeholder="e.g., Loans, Claims, Payments" />
                <span asp-validation-for="WorkstreamId" class="text-danger"></span>
                <div class="form-text">Optional workstream identifier for multi-tenant scenarios</div>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
                <div class="form-text">Whether this role's attributes are currently active</div>
            </div>

            <div class="mb-3">
                <label class="form-label">Role Attributes</label>
                <div id="attributeFormContainer"></div>
                <input asp-for="AttributesJson" type="hidden" />
                <span asp-validation-for="AttributesJson" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>JSON Attributes Example</h5>
            </div>
            <div class="card-body">
                <h6>Sample JSON:</h6>
                <pre class="small bg-light p-2"><code>{
  "ManagementLevel": 2,
  "ApprovalLimit": 100000,
  "TransactionLimit": 250000,
  "DataSensitivityLevel": "Confidential",
  "Department": "Loans"
}</code></pre>

                <h6 class="mt-3">Attribute Precedence:</h6>
                <ol class="small">
                    <li><strong>User attributes</strong> (highest)</li>
                    <li><strong>Role attributes</strong></li>
                    <li><strong>Group attributes</strong> (lowest)</li>
                </ol>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/attribute-form-builder.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const workstreamId = '@ViewBag.SelectedWorkstream';
            const formBuilder = new AttributeFormBuilder(
                workstreamId,
                'Role',
                '#attributeFormContainer',
                '#AttributesJson'
            );
            formBuilder.init();
        });
    </script>
}
