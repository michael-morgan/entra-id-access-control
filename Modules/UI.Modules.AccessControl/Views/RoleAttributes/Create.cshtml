@model UI.Modules.AccessControl.Models.RoleAttributeViewModel

@{
    ViewData["Title"] = "Create Role Attributes";
}

<h1>Create Role Attributes</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Two-part Role ID input: Manual text input + Searchable dropdown *@
            <div class="mb-3">
                <label asp-for="RoleId" class="form-label">Role ID</label>
                <div class="row">
                    <div class="col-md-6">
                        <input asp-for="RoleId" class="form-control" id="roleIdInput" placeholder="e.g., Loans.Approver" />
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                        <div class="form-text">Enter Role ID or select from dropdown</div>
                    </div>
                    <div class="col-md-6">
                        <select class="form-select" id="roleIdDropdown" style="width: 100%;">
                            <option value="">-- Select a Role --</option>
                            @if (ViewBag.Roles != null)
                            {
                                foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role.Id" data-displayname="@role.DisplayName">@role.DisplayName</option>
                                }
                            }
                        </select>
                        <div class="form-text">Or select from existing roles</div>
                    </div>
                </div>
                @* Hidden input for RoleName *@
                <input asp-for="RoleName" type="hidden" id="roleNameInput" />
            </div>

            @* Workstream - Pre-selected, read-only dropdown *@
            <div class="mb-3">
                <label asp-for="WorkstreamId" class="form-label">Workstream</label>
                <select asp-for="WorkstreamId" class="form-select" disabled>
                    <option value="@ViewBag.SelectedWorkstream" selected>@ViewBag.SelectedWorkstream</option>
                </select>
                @* Hidden input to ensure value posts back *@
                <input type="hidden" asp-for="WorkstreamId" value="@ViewBag.SelectedWorkstream" />
                <span asp-validation-for="WorkstreamId" class="text-danger"></span>
                <div class="form-text">Role attributes are scoped to the currently selected workstream</div>
            </div>

            @* Dynamic Attributes Form (Required fields managed by attribute-form-builder.js) *@
            <div class="mb-3">
                <label class="form-label">Required Attributes</label>
                <div id="attributeFormContainer"></div>
                <input asp-for="AttributesJson" type="hidden" />
                <span asp-validation-for="AttributesJson" class="text-danger"></span>
            </div>

            @* Optional Attributes in Accordion *@
            <div class="accordion mb-3" id="optionalFieldsAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOptional">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOptional" aria-expanded="false" aria-controls="collapseOptional">
                            Optional Attributes
                        </button>
                    </h2>
                    <div id="collapseOptional" class="accordion-collapse collapse" aria-labelledby="headingOptional" data-bs-parent="#optionalFieldsAccordion">
                        <div class="accordion-body" id="optionalAttributeFormContainer">
                            <p class="text-muted small">Optional attributes will appear here based on the AttributeSchemas configured for this workstream and attribute level.</p>
                        </div>
                    </div>
                </div>
            </div>

            @* Is Active - Important field, always visible *@
            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
                <div class="form-text">Whether this role's attributes are currently active</div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Attribute Information</h5>
            </div>
            <div class="card-body">
                <h6>Sample Attributes:</h6>
                <ul class="small">
                    <li><strong>ManagementLevel:</strong> 1-5</li>
                    <li><strong>ApprovalLimit:</strong> Dollar amount</li>
                    <li><strong>TransactionLimit:</strong> Dollar amount</li>
                    <li><strong>DataSensitivityLevel:</strong> Public, Internal, Confidential</li>
                    <li><strong>Department:</strong> Loans, Claims, Payments</li>
                </ul>

                <h6 class="mt-3">Example ABAC Rules:</h6>
                <ul class="small">
                    <li>Role can approve transactions if amount &lt;= ApprovalLimit</li>
                    <li>Role can access data based on DataSensitivityLevel</li>
                    <li>Higher ManagementLevel grants broader access</li>
                </ul>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5>Attribute Precedence</h5>
            </div>
            <div class="card-body">
                <ol class="small">
                    <li><strong>User attributes</strong> (highest)</li>
                    <li><strong>Role attributes</strong></li>
                    <li><strong>Group attributes</strong> (lowest)</li>
                </ol>
                <p class="small text-muted mt-2">When evaluating ABAC policies, user-specific attributes override role attributes, which override group attributes.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/attribute-form-builder.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Select2 on the role dropdown
            $('#roleIdDropdown').select2({
                theme: 'bootstrap-5',
                placeholder: 'Search for a role...',
                allowClear: true
            });

            // Sync dropdown selection to text input
            $('#roleIdDropdown').on('select2:select', function (e) {
                var selectedOption = $(this).find('option:selected');
                var selectedRoleId = selectedOption.val();
                var selectedRoleName = selectedOption.data('displayname');

                $('#roleIdInput').val(selectedRoleId);
                $('#roleNameInput').val(selectedRoleName);
            });

            // Clear text input when dropdown is cleared
            $('#roleIdDropdown').on('select2:clear', function (e) {
                $('#roleIdInput').val('');
                $('#roleNameInput').val('');
            });

            // Initialize attribute form builder
            const workstreamId = '@ViewBag.SelectedWorkstream';
            const formBuilder = new AttributeFormBuilder(
                workstreamId,
                'Role',
                '#attributeFormContainer',
                '#AttributesJson',
                '#optionalAttributeFormContainer'
            );
            formBuilder.init();
        });
    </script>
}
