@model Api.Modules.AccessControl.Persistence.Entities.Authorization.AbacRule

@{
    ViewData["Title"] = "Delete ABAC Rule";
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <p class="lead text-danger">Are you sure you want to delete this ABAC rule?</p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-danger">
            <h5>Warning</h5>
            <p>Deleting this rule will permanently remove it from the system. This action cannot be undone.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card border-danger">
            <div class="card-header">
                <h4>@Model.RuleName</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Rule ID</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">Workstream</dt>
                    <dd class="col-sm-9">@Model.WorkstreamId</dd>

                    <dt class="col-sm-3">Rule Group</dt>
                    <dd class="col-sm-9">
                        @if (Model.RuleGroup != null)
                        {
                            <span>@Model.RuleGroup.GroupName</span>
                        }
                        else
                        {
                            <span class="text-muted">Standalone rule (not in a group)</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Rule Type</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">@Model.RuleType</span>
                    </dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Inactive</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Priority</dt>
                    <dd class="col-sm-9">@Model.Priority</dd>

                    <dt class="col-sm-3">Failure Message</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrWhiteSpace(Model.FailureMessage))
                        {
                            @Model.FailureMessage
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Configuration</dt>
                    <dd class="col-sm-9">
                        <pre class="bg-light p-3 border rounded">@Model.Configuration</pre>
                    </dd>

                    <dt class="col-sm-3">Created At</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                    @if (!string.IsNullOrWhiteSpace(Model.CreatedBy))
                    {
                        <dt class="col-sm-3">Created By</dt>
                        <dd class="col-sm-9">@Model.CreatedBy</dd>
                    }

                    @if (Model.ModifiedAt.HasValue)
                    {
                        <dt class="col-sm-3">Modified At</dt>
                        <dd class="col-sm-9">@Model.ModifiedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.ModifiedBy))
                    {
                        <dt class="col-sm-3">Modified By</dt>
                        <dd class="col-sm-9">@Model.ModifiedBy</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">View Details</a>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
