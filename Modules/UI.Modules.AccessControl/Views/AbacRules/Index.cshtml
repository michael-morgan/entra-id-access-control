@model IEnumerable<Api.Modules.AccessControl.Persistence.Entities.Authorization.AbacRule>

@{
    ViewData["Title"] = "ABAC Rules";
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <p class="lead">Manage individual ABAC rules for attribute-based authorization.</p>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <div class="alert alert-info">
            <strong>Workstream:</strong> @ViewBag.SelectedWorkstream
        </div>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <form asp-action="Index" method="get" class="form-inline">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search by rule name..." />
                </div>
                <div class="col-md-3">
                    <select name="ruleType" class="form-control">
                        <option value="">All Rule Types</option>
                        <option value="AttributeComparison" selected="@(ViewBag.RuleType == "AttributeComparison")">Attribute Comparison</option>
                        <option value="PropertyMatch" selected="@(ViewBag.RuleType == "PropertyMatch")">Property Match</option>
                        <option value="ValueRange" selected="@(ViewBag.RuleType == "ValueRange")">Value Range</option>
                        <option value="TimeRestriction" selected="@(ViewBag.RuleType == "TimeRestriction")">Time Restriction</option>
                        <option value="LocationRestriction" selected="@(ViewBag.RuleType == "LocationRestriction")">Location Restriction</option>
                        <option value="AttributeValue" selected="@(ViewBag.RuleType == "AttributeValue")">Attribute Value</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="ruleGroupId" class="form-control" asp-items="ViewBag.RuleGroups">
                        <option value="">All Rule Groups</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a asp-action="Index" class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <a asp-action="Create" class="btn btn-success">Create New Rule</a>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Rule Name</th>
                        <th>Rule Type</th>
                        <th>Rule Group</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rule in Model)
                    {
                        <tr>
                            <td>
                                <strong>@rule.RuleName</strong>
                                @if (!string.IsNullOrWhiteSpace(rule.FailureMessage))
                                {
                                    <br />
                                    <small class="text-muted">@rule.FailureMessage</small>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">@rule.RuleType</span>
                            </td>
                            <td>
                                @if (rule.RuleGroup != null)
                                {
                                    <a asp-controller="AbacRuleGroups" asp-action="Details" asp-route-id="@rule.RuleGroupId">
                                        @rule.RuleGroup.GroupName
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Standalone</span>
                                }
                            </td>
                            <td>@rule.Priority</td>
                            <td>
                                @if (rule.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@rule.Id" class="btn btn-sm btn-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@rule.Id" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@rule.Id" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <p>No ABAC rules found for the selected workstream.</p>
        <p>
            <a asp-action="Create" class="btn btn-success">Create your first rule</a>
        </p>
    </div>
}

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>About ABAC Rules</h5>
            </div>
            <div class="card-body">
                <p>ABAC rules define declarative authorization patterns based on attributes. Each rule can be standalone or belong to a rule group.</p>
                <h6>Rule Types:</h6>
                <ul>
                    <li><strong>Attribute Comparison:</strong> Compare user/group/role attributes with entity properties</li>
                    <li><strong>Property Match:</strong> Match entity properties against specific values</li>
                    <li><strong>Value Range:</strong> Check if numeric values fall within allowed ranges</li>
                    <li><strong>Time Restriction:</strong> Enforce time-based access controls</li>
                    <li><strong>Location Restriction:</strong> Enforce location-based access controls</li>
                    <li><strong>Attribute Value:</strong> Check attribute values directly</li>
                </ul>
            </div>
        </div>
    </div>
</div>
