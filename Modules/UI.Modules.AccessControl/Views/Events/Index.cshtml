@model Api.Modules.AccessControl.Models.PagedResult<Api.Modules.AccessControl.Models.BusinessEventSummary>

@{
    ViewData["Title"] = "Business Events";
}

<h1>Business Events</h1>

<p>
    <a asp-action="Audit" class="btn btn-info">View Audit Logs</a>
</p>

<form asp-action="Index" method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <label for="workstreamId" class="form-label">Workstream</label>
        <select name="workstreamId" id="workstreamId" class="form-select">
            <option value="">All Workstreams</option>
            @foreach (var ws in ViewBag.Workstreams)
            {
                <option value="@ws" selected="@(ws == ViewBag.WorkstreamId)">@ws</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <label for="eventType" class="form-label">Event Type</label>
        <select name="eventType" id="eventType" class="form-select">
            <option value="">All Types</option>
            @foreach (var type in ViewBag.EventTypes)
            {
                <option value="@type" selected="@(type == ViewBag.EventType)">@type</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <label for="startDate" class="form-label">Start Date</label>
        <input type="date" name="startDate" id="startDate" class="form-control" value="@ViewBag.StartDate" />
    </div>
    <div class="col-md-2">
        <label for="endDate" class="form-label">End Date</label>
        <input type="date" name="endDate" id="endDate" class="form-control" value="@ViewBag.EndDate" />
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-secondary me-2">Filter</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
    </div>
</form>

<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>Time</th>
            <th>Workstream</th>
            <th>Event Type</th>
            <th>Category</th>
            <th>Actor</th>
            <th>Business Process</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td><small>@item.OccurredAt.ToString("yyyy-MM-dd HH:mm:ss")</small></td>
            <td><span class="badge bg-primary">@item.WorkstreamId</span></td>
            <td><span class="badge bg-secondary">@item.EventType</span></td>
            <td><span class="badge bg-info">@item.EventCategory</span></td>
            <td>@item.ActorDisplayName</td>
            <td>
                @if (!string.IsNullOrEmpty(item.BusinessProcessId))
                {
                    <a asp-action="ProcessTimeline" asp-route-id="@item.BusinessProcessId" class="small">
                        @item.BusinessProcessId.Substring(0, Math.Min(20, item.BusinessProcessId.Length))...
                    </a>
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-info" title="Details">
                    <i class="bi bi-eye"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">
        No events found for the selected criteria.
    </div>
}

<div class="d-flex justify-content-between align-items-center mt-3">
    <div class="text-muted small">
        Showing @Model.Items.Count of @Model.TotalCount events (Page @Model.PageNumber of @Model.TotalPages)
    </div>
    <nav>
        <ul class="pagination pagination-sm mb-0">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-workstreamId="@ViewBag.WorkstreamId"
                       asp-route-eventType="@ViewBag.EventType"
                       asp-route-startDate="@ViewBag.StartDate"
                       asp-route-endDate="@ViewBag.EndDate"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                </li>
            }
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-workstreamId="@ViewBag.WorkstreamId"
                       asp-route-eventType="@ViewBag.EventType"
                       asp-route-startDate="@ViewBag.StartDate"
                       asp-route-endDate="@ViewBag.EndDate"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>
