@model UI.Modules.AccessControl.Models.GroupAttributeViewModel

@{
    ViewData["Title"] = "Create Group Attributes";
}

<h1>Create Group Attributes</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Two-part Group ID input: Manual text input + Searchable dropdown *@
            <div class="mb-3">
                <label asp-for="GroupId" class="form-label">Group ID</label>
                <div class="row">
                    <div class="col-md-6">
                        <input asp-for="GroupId" class="form-control" id="groupIdInput" placeholder="e.g., 87654321-4321-4321-4321-210987654321" />
                        <span asp-validation-for="GroupId" class="text-danger"></span>
                        <div class="form-text">Enter Group ID or select from dropdown</div>
                    </div>
                    <div class="col-md-6">
                        <select class="form-select" id="groupIdDropdown" style="width: 100%;">
                            <option value="">-- Select a Group --</option>
                            @foreach (var group in ViewBag.Groups)
                            {
                                <option value="@group.Id" data-displayname="@group.DisplayName">@group.DisplayName</option>
                            }
                        </select>
                        <div class="form-text">Or select from existing groups</div>
                    </div>
                </div>
            </div>

            @* Hidden GroupName field - auto-populated from dropdown selection *@
            <input asp-for="GroupName" type="hidden" id="groupNameInput" />

            @* Workstream - Pre-selected, read-only dropdown *@
            <div class="mb-3">
                <label asp-for="WorkstreamId" class="form-label">Workstream</label>
                <select asp-for="WorkstreamId" class="form-select" disabled>
                    <option value="@ViewBag.SelectedWorkstream" selected>@ViewBag.SelectedWorkstream</option>
                </select>
                @* Hidden input to ensure value posts back *@
                <input type="hidden" asp-for="WorkstreamId" value="@ViewBag.SelectedWorkstream" />
                <span asp-validation-for="WorkstreamId" class="text-danger"></span>
                <div class="form-text">Workstream is determined by current selection in navigation</div>
            </div>

            @* Dynamic Attributes Form (Required fields managed by attribute-form-builder.js) *@
            <div class="mb-3">
                <label class="form-label">Required Attributes</label>
                <div id="attributeFormContainer"></div>
                <input asp-for="AttributesJson" type="hidden" />
                <span asp-validation-for="AttributesJson" class="text-danger"></span>
            </div>

            @* Optional Attributes in Accordion *@
            <div class="accordion mb-3" id="optionalFieldsAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOptional">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOptional" aria-expanded="false" aria-controls="collapseOptional">
                            Optional Attributes
                        </button>
                    </h2>
                    <div id="collapseOptional" class="accordion-collapse collapse" aria-labelledby="headingOptional" data-bs-parent="#optionalFieldsAccordion">
                        <div class="accordion-body" id="optionalAttributeFormContainer">
                            <p class="text-muted small">Optional attributes will appear here based on the AttributeSchemas configured for this workstream and attribute level.</p>
                        </div>
                    </div>
                </div>
            </div>

            @* Is Active - Important field, always visible *@
            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
                <div class="form-text">Whether this group's attributes are currently active</div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Group ID Input</h5>
            </div>
            <div class="card-body">
                <h6>Two Ways to Enter Group ID:</h6>
                <ol class="small">
                    <li><strong>Manual Entry:</strong> Type or paste the Entra ID Group Object ID directly</li>
                    <li><strong>Select from List:</strong> Use the searchable dropdown to find and select a group by its display name</li>
                </ol>
                <p class="small text-muted mt-2">The dropdown will automatically populate the Group ID field when you select a group.</p>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5>Attribute Precedence</h5>
            </div>
            <div class="card-body">
                <ol class="small">
                    <li><strong>User attributes</strong> (highest)</li>
                    <li><strong>Role attributes</strong></li>
                    <li><strong>Group attributes</strong> (lowest)</li>
                </ol>
                <p class="small text-muted mt-2">When evaluating ABAC policies, user-specific attributes override role and group attributes.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/attribute-form-builder.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Select2 on the group dropdown
            $('#groupIdDropdown').select2({
                theme: 'bootstrap-5',
                placeholder: 'Search for a group...',
                allowClear: true
            });

            // Sync dropdown selection to text input AND populate GroupName
            $('#groupIdDropdown').on('select2:select', function (e) {
                var selectedOption = $(this).find('option:selected');
                var selectedGroupId = selectedOption.val();
                var selectedDisplayName = selectedOption.data('displayname');

                $('#groupIdInput').val(selectedGroupId);
                $('#groupNameInput').val(selectedDisplayName);
            });

            // Clear both text input and GroupName when dropdown is cleared
            $('#groupIdDropdown').on('select2:clear', function (e) {
                $('#groupIdInput').val('');
                $('#groupNameInput').val('');
            });

            // Initialize attribute form builder
            const workstreamId = '@ViewBag.SelectedWorkstream';
            const formBuilder = new AttributeFormBuilder(
                workstreamId,
                'Group',
                '#attributeFormContainer',
                '#AttributesJson',
                '#optionalAttributeFormContainer'
            );
            formBuilder.init();
        });
    </script>
}
