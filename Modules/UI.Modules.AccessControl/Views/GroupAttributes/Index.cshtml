@model IEnumerable<Api.Modules.AccessControl.Persistence.Entities.Authorization.GroupAttribute>

@{
    ViewData["Title"] = "Group Attributes";
}

<h1>Group Attributes (ABAC)</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Group Attributes</a>
</p>

<form asp-action="Index" method="get" class="row g-3 mb-3">
    <div class="col-md-9">
        <label for="search" class="form-label">Search</label>
        <input type="text" name="search" id="search" class="form-control" value="@ViewBag.Search" placeholder="Search by Group ID, Name, or Workstream..." />
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button type="submit" class="btn btn-secondary me-2">Search</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Group Name</th>
            <th>Group ID</th>
            <th>Workstream</th>
            <th>Status</th>
            <th>Attributes Preview</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.GroupName)</td>
            <td><code class="small">@Html.DisplayFor(modelItem => item.GroupId)</code></td>
            <td>
                @if (!string.IsNullOrEmpty(item.WorkstreamId))
                {
                    <span class="badge bg-primary">@item.WorkstreamId</span>
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </td>
            <td>
                @if (item.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.AttributesJson))
                {
                    var preview = item.AttributesJson.Length > 80 ? item.AttributesJson.Substring(0, 80) + "..." : item.AttributesJson;
                    <code class="small">@preview</code>
                }
                else
                {
                    <span class="text-muted">No attributes</span>
                }
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Details">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No group attributes found. <a asp-action="Create">Create group attributes</a> to enable group-level ABAC rules.
    </div>
}
